{
  "name": "cli-pure-scaffold",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build-cdn": "cross-env CDN_ENV=true yarn run cli build",
    "build-no-hash": "cross-env NO_HASH_ENV=true yarn run cli build",
    "build-qa": "yarn run cli build --mode qa",
    "build": "yarn run cli build",
    "start": "yarn run cli serve",
    "start-qa": "yarn run cli serve --mode qa",
    "stylelint": "cross-env DEBUG=rubik yarn run cli stylelint --fix",
    "lint": "cross-env DEBUG=common-bin,rubik yarn run cli lint",
    "check-package": "yarn run cli check-package",
    "cli": "node ../../bin/main.js"
  },
  "keywords": [
    "webpack",
    "multiple",
    "pages"
  ],
  "author": "Fancy <fancyboynet@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^5.2.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.1.0",
    "stylelint-config-recommended": "^3.0.0"
  },
  "dependencies": {
    "axios": "^0.19.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "cli check-package",
      "post-checkout": "cli check-package",
      "commit-msg": "cli commitlint"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn run cli lint",
      "git add"
    ]
  }
}
